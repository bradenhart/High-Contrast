<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_nav_drawer_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bradenhart.hctester.NavigationDrawerFragment"
    android:background="#FFFFFF">


    <LinearLayout
        android:id="@+id/nav_drawer_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ee2f00"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:paddingTop="20dp">

        <ImageView
            android:id="@+id/profile_picture"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/profile_pic_border" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="John Doe"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:padding="5dp"
                android:text="Level 3"
                android:textColor="@android:color/white"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:padding="2dp"
                android:text="Dunedin"
                android:textColor="@android:color/white"
                android:textSize="20dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/nav_drawer_top_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/nav_drawer_header">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/nd_list_item_height"
            android:text="@string/completed"
            android:textSize="@dimen/nd_list_item_text_size"
            android:textColor="@color/black87"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/nd_list_item_left_margin"
            android:layout_marginLeft="@dimen/nd_list_item_left_margin"
            android:gravity="center_vertical"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/nd_list_item_height"
            android:text="@string/achievements"
            android:textSize="@dimen/nd_list_item_text_size"
            android:textColor="@color/black87"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/nd_list_item_left_margin"
            android:layout_marginLeft="@dimen/nd_list_item_left_margin"
            android:gravity="center_vertical"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#8a000000"
        android:layout_marginTop="@dimen/nd_list_item_spacing"
        android:layout_marginBottom="@dimen/nd_list_item_spacing" />
    
    <LinearLayout
        android:id="@+id/nav_drawer_bottom_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/nav_drawer_settings"
            android:layout_width="match_parent"
            android:layout_height="@dimen/nd_list_item_height"
            android:text="@string/settings"
            android:textSize="@dimen/nd_list_item_text_size"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/nd_list_item_left_margin"
            android:layout_marginLeft="@dimen/nd_list_item_left_margin"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/nav_drawer_help_settings"
            android:layout_width="match_parent"
            android:layout_height="@dimen/nd_list_item_height"
            android:text="@string/help_feedback"
            android:textSize="@dimen/nd_list_item_text_size"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/nd_list_item_left_margin"
            android:layout_marginLeft="@dimen/nd_list_item_left_margin"
            android:gravity="center_vertical"/>
    </LinearLayout>


</RelativeLayout>
